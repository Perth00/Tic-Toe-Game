<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #4A148C;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.view.HomepageController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #CE93D8; -fx-background-radius: 10; -fx-padding: 20; -fx-border-radius: 10;" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" text="Game Policy">
                    <font>
                        <Font size="36.0" />
                    </font>
                    <effect>
                        <DropShadow color="#000000" offsetY="3.0" radius="3.0" />
                    </effect>
                </Label>
                <Label style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF;" text="1. The game is played on a grid that's 3 squares by 3 squares." wrapText="true" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF;" text="2. You are X, your friend (or the computer in this case) is O." wrapText="true" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF;" text="3. Players take turns putting their marks in empty squares." wrapText="true" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF;" text="4. The first player to get 3 of their marks in a row (up, down, across, or diagonally) is the winner." wrapText="true" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF;" text="5. When all 9 squares are full, the game is over." wrapText="true" />
                <Button cancelButton="true" defaultButton="true" onAction="#handleCloseButton" style="-fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #4A148C; -fx-background-radius: 5px; -fx-padding: 10px;" text="Close">
                    <effect>
                        <DropShadow color="#000000" offsetY="3.0" radius="3.0" />
                    </effect>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
